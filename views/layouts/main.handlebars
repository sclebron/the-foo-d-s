<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" type="image/jpg" href="/public/img/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/css/jass.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link href="/dist/style.css" rel="stylesheet" />
    <title>Fair Fare</title>
  </head>

  <body>
    <header>
      <h1>Welcome to Fair Fare!</h1>
      <h5>A plate that doesn't suck!</h5>
    </header>
    <nav>
      <a href="/">Home</a>
      {{#if loggedIn}}
        <button id="logout" class="btn-no-style">Logout</button>
      {{else}}
        <a href="/login">Login</a>
      {{/if}}
      <div class="container-fluid w-75 justify-content-center">
        <form class="d-flex col-6" role="search" id="btn-submit">
          <select
            class="form-select"
            id="genrePicker"
            aria-label="Default select example"
            style="padding: 4px; width: 450px"
          >
            <option selected>Please select your restaurant type:</option>
            <option value="1" id="1">American</option>
            <option value="2" id="2">Asian</option>
            <option value="3" id="3">Italian</option>
            <option value="4" id="4">Mexican</option>
            <option value="5" id="5">Random...</option>
          </select>
        </form>
      </div>
    </nav>
    <main>
      <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="min-height: 285px; width:575px; padding:4px">
            <div class="modal-dialog modal-xl">
                <div class="modal-content bg-light">
                    <div class="modal-body d-flex justify-content-end">
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close">x</button>
                        <form class="form login-form">
          <div class="form-group">
            <label for="user-review">Pleave your review below:</label>
            <input class="form-input" type="text" id="user-review" />
            <button>Submit</button>
          </div>
                    </div>
                    <div class="modal-body d-flex"></div>
                </div>
            </div>
        </div>
        
    </main>
    <footer>
        <h1>Made with ❤️ by fine folks at the-foo-d-s</h1>
      </footer>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
    {{{body}}}
  
  <script src=".../assets/script.js"></script>
  </body>
</html>